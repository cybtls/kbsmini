@import '../../assets/css/icon.wxss';

view, text, scroll-view, swiper, button, form, input, textarea, label, navigator,
image {
  box-sizing: border-box;
}
.tabhover {
  opacity: .8;
}
.kbs-tabbar-main {
  display: flex;
  position: relative;
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between;
  padding: 0;
  z-index: 0;
  filter: drop-shadow(0 0 4px lightgray);
  height: calc(100rpx + env(safe-area-inset-bottom) / 2);
  color: #666;
}

.kbs-tabbar-main .tabbar-item {
  background-color: #fff;
  font-size: 22rpx;
  position: relative;
  flex: 1;
  text-align: center;
  padding: 10rpx 0 0 0;
  display: block;
  height: auto;
  line-height: 1;
  margin: 0;
  height: inherit;
  overflow: initial;
}

.kbs-tabbar-main .tabbar-item_active {
  color: #0d9bdd;
}

.kbs-tabbar-main .tabbar-item_normal {
  color: #aaaaaa;
}
.kbs-tabbar-main .tabbar-item [class*="icon"] {
  width: 100rpx;
  position: relative;
  display: block;
  height: auto;
  margin: 0 auto 10rpx;
  text-align: center;
  font-size: 40rpx;
}

.kbs-tabbar-main .tabbar-item-center {
  position: relative;
  z-index: 2;
  padding-top: 90rpx;
  background: radial-gradient(circle at 50% 0rpx, transparent 70rpx, white 0) top left 100% no-repeat;
}
.kbs-tabbar-main .tabbar-item-center [class*="icon"] {
  position: absolute;
  width: 100rpx;
  z-index: 2;
  height: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  font-size: 50rpx;
  top: -50rpx;
  left: 0;
  right: 0;
  margin: auto;
  padding: 0;
  background-color: #0d9bdd;
  color: #ffffff;
}

.kbs-tabbar-main .tabbar-item-center::after {
  content: "";
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: -50rpx;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 50rpx;
  background-color: transparent;
  z-index: 0;
}

.kbs-tabbar-main .tabbar-item-center::before {
  content: "";
  position: absolute;
  width: 100rpx;
  height: 30rpx;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: auto;
  background-color: inherit;
  z-index: 1;
}

